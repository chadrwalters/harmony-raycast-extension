{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "harmony-control",
  "title": "Harmony Control",
  "description": "Control your Logitech Harmony Hub devices",
  "icon": "command-icon.png",
  "author": "chad",
  "categories": [
    "Media",
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "control",
      "title": "Control Harmony Hub",
      "description": "Control your Harmony Hub devices and activities",
      "mode": "view"
    },
    {
      "name": "settings",
      "title": "Harmony Settings",
      "description": "Configure Harmony Hub extension settings",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "autoConnect",
      "type": "checkbox",
      "required": false,
      "title": "Auto Connect",
      "description": "Automatically connect to last used hub",
      "default": true,
      "label": "Auto Connect"
    },
    {
      "name": "lastHubId",
      "type": "textfield",
      "required": false,
      "title": "Last Hub ID",
      "description": "ID of the last connected hub",
      "default": "",
      "label": "Last Hub ID"
    },
    {
      "name": "debugMode",
      "type": "checkbox",
      "required": false,
      "title": "Debug Mode",
      "description": "Enable debug logging",
      "default": false,
      "label": "Debug Mode"
    },
    {
      "name": "defaultView",
      "type": "dropdown",
      "required": false,
      "title": "Default View",
      "description": "Choose whether to show Activities or Devices as the main view",
      "default": "activities",
      "data": [
        {
          "title": "Activities",
          "value": "activities"
        },
        {
          "title": "Devices",
          "value": "devices"
        }
      ]
    }
  ],
  "dependencies": {
    "@harmonyhub/client-ws": "^1.0.9",
    "@harmonyhub/discover": "^1.0.9",
    "@raycast/api": "^1.64.4",
    "@raycast/utils": "^1.10.1",
    "node-machine-id": "^1.1.12",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
