{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "harmony-control",
  "title": "Harmony Control",
  "description": "Control your Logitech Harmony Hub devices",
  "icon": "command-icon.png",
  "author": "chad",
  "categories": [
    "Applications",
    "Remote Control"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Control Harmony Hub",
      "description": "Control your Harmony Hub devices and activities",
      "mode": "view"
    },
    {
      "name": "shortcuts",
      "title": "Manage Harmony Shortcuts",
      "description": "Create and manage shortcuts for quick access to commands",
      "mode": "view"
    },
    {
      "name": "settings",
      "title": "Harmony Settings",
      "description": "Configure Harmony Hub extension settings",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "autoConnect",
      "type": "checkbox",
      "required": false,
      "title": "Auto Connect",
      "description": "Automatically connect to last used hub",
      "default": true
    },
    {
      "name": "lastHubId",
      "type": "textfield",
      "required": false,
      "title": "Last Hub ID",
      "description": "ID of the last connected hub",
      "default": ""
    }
  ],
  "dependencies": {
    "@harmonyhub/client-ws": "^1.0.9",
    "@harmonyhub/discover": "^1.0.9",
    "@raycast/api": "^1.64.4",
    "@xstate/react": "^4.0.2",
    "xstate": "^5.5.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^8.51.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "version": "0.0.1"
}
