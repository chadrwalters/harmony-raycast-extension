{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "harmony",
  "title": "Harmony Hub",
  "description": "Control your Logitech Harmony Hub devices",
  "icon": "command-icon.png",
  "author": "chadwalters",
  "categories": [
    "Applications",
    "Remote Control"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chadrwalters/harmony-raycast-extension"
  },
  "commands": [
    {
      "name": "index",
      "title": "Harmony Hub",
      "description": "Control your Harmony Hub devices and activities",
      "mode": "view"
    },
    {
      "name": "action",
      "title": "Harmony Action",
      "description": "Execute a saved Harmony command",
      "mode": "no-view",
      "arguments": [
        {
          "type": "text",
          "name": "command",
          "placeholder": "Command data",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@harmonyhub/client-ws": "^1.0.8",
    "@harmonyhub/discover": "^1.0.8",
    "@raycast/api": "^1.49.3",
    "@raycast/utils": "^1.5.2",
    "@xstate/react": "^3.2.2",
    "xstate": "^4.38.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
